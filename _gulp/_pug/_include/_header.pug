// Header
if index == true
  header.header.--main
    .container

      .header__wrapper
        .logo.header__logo
          a(href="#!")
            img(src="./images/sp.gif", alt="" style="background-image: url('./images/logo.png')")
        .header__phones
          a(href="tel:") +357 
            b 99 855 277

        nav.header__menu
          ul
            li: a(href="#!") НОМЕРА
            li: a(href="#!") УСЛУГИ
            li: a(href="#!") ОТЗЫВЫ
            li: a(href="#!") КОНТАКТЫ

        nav.nav.header__nav(role="navigation")
          button(type="button").menu-btn.j-modal-btn
            span Меню
          .nav__dropdown
            .nav__dropdown-head
            .nav__dropdown-wrapper
              ul
                li.active: span Главная
