    //  Google Map 
    script(src='https://maps.googleapis.com/maps/api/js?sensor=false')
    script.
      
      function initialize() {
          var myLatlng = new google.maps.LatLng(51.518641, -0.168163);
          var map_options = {
            zoom: 16,
            mapTypeId: google.maps.MapTypeId.ROADMAP,
            center: myLatlng,
            scrollwheel: false,
            disableDefaultUI: true
          }
      
          var map = new google.maps.Map(document.getElementById('yamaps'), map_options)
          var myIcon = new google.maps.MarkerImage('./tmp/map-marker.png', null, null, null, new google.maps.Size(225,225));
      
          var marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            icon: myIcon
          });
      
          /* Remove if you dont want B/W Google Map */
          
          var styles = [
            {
              featureType: "all",
              stylers: [
                { saturation: -100 }
              ]
            }
          ];
      
          map.setOptions({styles: styles});
          
        }
      
        google.maps.event.addDomListener(window, 'load', initialize);
      
    //  Google Map Ends! 